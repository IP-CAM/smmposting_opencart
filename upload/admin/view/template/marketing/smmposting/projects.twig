{{ header }}
{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            {{ smm_menu }}
        </div>
    </div>

    <div class="smmposting-container">
        {% if (error_warning) %}
            <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if (success) %}
            <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="row">
            <div class="col-sm-12 clearfix">
                <div class="pull-right">
                    <a href="{{ add_project_link }}" style="margin-bottom:2rem;" class="btn btn-success btn-md"><i class="fa fa-plus"></i> <span class="hidden-xs">{{ button_add_project }}</span></a>
                </div>
            </div>

            <div class="col-sm-12 clearfix">
                <div class="row  row-flex">
                    {% if (smm_projects is not empty) %}
                        {% for smm_project in smm_projects %}
                            <div class="col-sm-4">
                                <div class="card smm-project">
                                    <div class="card-header">
                                        <h4>{{ smm_project['name'] }}</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                {% if (smm_project['socials'] is defined) %}
                                                    {% if (smm_project.socials.ok is defined) %}
                                                        <a class="socials"><i class="fa fa-odnoklassniki"></i></a>
                                                    {% endif %}


                                                    {% if (smm_project.socials.vk is defined) %}
                                                        <a class="socials"><i class="fa fa-vk"></i></a>
                                                    {% endif %}

                                                    {% if (smm_project.socials.tg is defined) %}
                                                        <a class="socials"><i class="fa fa-send"></i></a>
                                                    {% endif %}

                                                    {% if (smm_project.socials.ig is defined) %}
                                                        <a class="socials"><i class="fa fa-instagram"></i></a>
                                                    {% endif %}

                                                    {% if (smm_project.socials.fb is defined) %}
                                                        <a class="socials"><i class="fa fa-facebook"></i></a>
                                                    {% endif %}

                                                    {% if (smm_project.socials.tb is defined) %}
                                                        <a class="socials"><i class="fa fa-tumblr"></i></a>
                                                    {% endif %}

                                                    {% if (smm_project.socials.tw is defined) %}
                                                        <a class="socials"><i class="fa fa-twitter"></i></a>
                                                    {% endif %}

                                                {% endif %}


                                            </div>
                                        </div>

                                        <div class="mt-2">
                                            <a class="btn btn-info" href="{{ edit_project_link }}&id={{ smm_project['id'] }}"><i class="fa fa-edit"></i> {{ text_preview }}</a>
                                            <a class="btn btn-danger" href="{{ deleteproject_link }}&id={{ smm_project['id'] }}"><i class="fa fa-trash"></i> {{ text_delete }}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-center">
                            <div class="row">
                                <a href="{{ add_project_link }}" title="{{ button_add_project }}">
                                    <img src="/admin/view/image/smmposting/smm.gif">
                                </a>
                            </div>

                            <a href="{{ add_project_link }}" style="margin-bottom:2rem;" class="btn btn-success btn-md"><i class="fa fa-plus"></i> <span class="hidden-xs">{{ button_add_project }}</span></a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 text-left">{{ pagination }}</div>
            <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
    </div>
{{ footer }}